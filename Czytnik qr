<!DOCTYPE html>
<html lang="pl">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Generowanie Kodów QR</title>
  <!-- Link do zewnętrznej biblioteki QRCode.js -->
  <script src="https://cdn.rawgit.com/davidshimjs/qrcodejs/gh-pages/qrcode.min.js"></script>
  <!-- Link do Web Speech API dla odczytu na głos -->
  <script>
    // Funkcja do odczytu tekstu na głos
    function readAloud(text) {
      const speech = new SpeechSynthesisUtterance(text);
      speech.lang = 'pl-PL'; // Ustawiamy język polski
      speechSynthesis.speak(speech);
    }

    window.onload = function() {
      const fileUrl = "INSTUKCJA%20BHP%20DLA%20PRACOWNIKÓW%20FERMY%20BYDŁA%20AAA.pdf"; // Zmienna do linku do pliku PDF
      const qrCodeContainer = document.getElementById("qrcode");

      // Generowanie QR Code
      const qr = new QRCode(qrCodeContainer, {
        text: window.location.href + fileUrl, // URL strony + plik PDF
        width: 128,
        height: 128,
      });
    }
  </script>
</head>
<body>
  <h1>Generowanie Kodu QR</h1>
  <p>Po zeskanowaniu kodu QR, plik PDF zostanie otwarty.</p>

  <!-- Miejsce do wyświetlenia kodu QR -->
  <div id="qrcode"></div>

  <!-- Link do pliku PDF -->
  <a href="INSTUKCJA%20BHP%20DLA%20PRACOWNIKÓW%20FERMY%20BYDŁA%20AAA.pdf" target="_blank" onclick="readAloud('Otwieram plik PDF: INSTUKCJA BHP DLA PRACOWNIKÓW FERMY BYDŁA AAA.')">Otwórz plik PDF</a>
  
</body>
